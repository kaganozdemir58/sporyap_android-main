<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_view_sport"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/image_view_sport_bg"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_sport_bg"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/image_view_sport_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_checked_radio"
        app:layout_constraintEnd_toEndOf="@+id/image_view_sport"
        app:layout_constraintTop_toTopOf="@+id/image_view_sport"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/text_view_sport_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_sport"
        app:layout_constraintEnd_toEndOf="@+id/image_view_sport"
        app:layout_constraintStart_toStartOf="@+id/image_view_sport"
        app:layout_constraintTop_toTopOf="@+id/image_view_sport"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/text_view_sport"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/ic_bg_alt"
        app:layout_constraintStart_toStartOf="@+id/image_view_sport"
        app:layout_constraintEnd_toEndOf="@+id/image_view_sport"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_sport"/>

</androidx.constraintlayout.widget.ConstraintLayout>